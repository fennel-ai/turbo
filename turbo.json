{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["BLOG_URL", "DOCS_URL", "GITHUB_TOKEN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "storybook-static/**"]
    },
    "lint": {
      "outputs": []
    },
	"test": {},
	"coverage": {
		"outputs": ["coverage/**"]
	},
	"dev": {
		"dependsOn": ["^dev"],
		"cache": false
	}
  }
}
